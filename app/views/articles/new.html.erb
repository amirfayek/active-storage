<h1>New Article</h1>

<%= form_for :article, url: articles_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <div>
    <%= f.label :cover_image %><br>
    <%= f.file_field :cover_image %>
  </div>
  
  <div>
    <%= f.label :uploads %><br>
    <%= f.file_field :uploads, multiple: true %>
  </div>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>